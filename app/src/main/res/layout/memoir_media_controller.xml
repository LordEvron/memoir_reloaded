<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/selectTransparentBlue"
    android:padding="5dp"
    android:layout_gravity="bottom" 
    android:visibility="invisible">

    <ImageView
        android:id="@+id/MemoirMediaControllerIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/MemoirMediaControllerTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/MemoirMediaControllerIV"
        android:layout_centerVertical="true"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/MemoirMediaControllerTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="00:00"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <SeekBar
        android:id="@+id/MemoirMediaControllerSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/MemoirMediaControllerTV2"
        android:layout_toRightOf="@id/MemoirMediaControllerTV1"
        android:max="1000" />

</RelativeLayout>